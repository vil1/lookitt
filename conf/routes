# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.index

GET     /session/:username                  controllers.Coding.createSession(username:String)
GET     /session/:username/:session         controllers.Coding.joinSession(username:String, session:String)
GET     /websocket/session/:session/:user   controllers.Coding.sessionSocket(session:String, user:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)

